{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }]
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules", "src/**/*.spec.ts"]
}
